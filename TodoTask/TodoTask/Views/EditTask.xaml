    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:TodoTask.ViewModels"
    x:Class="TodoTask.Views.EditTask">

      <ContentPage.BindingContext>
        <vm:EditTaskViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Content>

        <StackLayout>

            <Label Text="{ Binding Task.Id}"></Label>

        </StackLayout>

    </ContentPage.Content>
</ContentPage>

